<div class="container d-flex course_style">
    <div class="course-form">
        <div class="d-flex my-auto">
            <form method="POST" action="/courses/store">
                <div class="d-flex justify-content-center mb-2">
                    <h3>Create Course</h3>
                </div>
                <div class="form-group">
                    <label for="name">Name course</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="" aria-describedby="helpId" required>
                    {{!-- <small id="helpId" class="text-muted">Name</small> --}}
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" name="description" id="description" class="form-control" placeholder="" aria-describedby="helpId" required>
                    {{!-- <small id="helpId" class="text-muted">Description</small> --}}
                </div>
                <div class="form-group">
                    <label for="videoId">Video Id</label>
                    <input type="text" name="videoId" id="VideoId" class="form-control" placeholder="" aria-describedby="helpId" required>
                    {{!-- <small id="helpId" class="text-muted">Video Id</small> --}}
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="text" name="image" id="image" class="form-control" placeholder="" aria-describedby="helpId">
                    {{!-- <small id="helpId" class="text-muted">Image</small> --}}
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
